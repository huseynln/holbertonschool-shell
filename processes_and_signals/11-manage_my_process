#!/usr/bin/env bash
# Init script that manages manage_my_process daemon
PID_FILE="/var/run/my_process.pid"

# Path to the manage_my_process script
SCRIPT="./manage_my_process"

case "$1" in
    start)
        # Start manage_my_process in the background
        $SCRIPT &
        # Save the PID to the file
        echo $! > "$PID_FILE" 2>/dev/null || echo $! > /tmp/my_process.pid
        # Display message
        echo "manage_my_process started"
        ;;

    stop)
        # Try to read PID from /var/run, fall back to /tmp
        if [ -f "$PID_FILE" ]; then
            PID=$(cat "$PID_FILE")
            kill "$PID" 2>/dev/null
            rm -f "$PID_FILE"
        elif [ -f "/tmp/my_process.pid" ]; then
            PID=$(cat /tmp/my_process.pid)
            kill "$PID" 2>/dev/null
            rm -f /tmp/my_process.pid
        fi
        # Display message
        echo "manage_my_process stopped"
        ;;

    restart)
        # Try to read PID from /var/run, fall back to /tmp
        if [ -f "$PID_FILE" ]; then
            PID=$(cat "$PID_FILE")
            kill "$PID" 2>/dev/null
            rm -f "$PID_FILE"
        elif [ -f "/tmp/my_process.pid" ]; then
            PID=$(cat /tmp/my_process.pid)
            kill "$PID" 2>/dev/null
            rm -f /tmp/my_process.pid
        fi
        # Start the process again
        $SCRIPT &
        # Save the new PID
        echo $! > "$PID_FILE" 2>/dev/null || echo $! > /tmp/my_process.pid
        # Display message
        echo "manage_my_process restarted"
        ;;

    *)
        # Display usage for any other argument or no argument
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac

exit 0
